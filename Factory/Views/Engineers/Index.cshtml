@* Engineers.Index *@
@{
  Layout = "_Layout";
}
@using Factory.Models;
@model List<Factory.Models.Engineer>;
@if (@Model.Count == 0)
{}
else
{
<table>
  <tr>
    <th>ID#</th>
    <th>Name</th>
    <th>Edit</th>
    <th>Delete</th>
  </tr>
    @foreach (Engineer engineer in Model)
    {
      <tr>
        <td>
          @engineer.EngineerId
        </td>
        <td>
          @Html.ActionLink($"{engineer.EngineerName}", "Read", new { id = engineer.EngineerId})
        </td>
        <td>
          @Html.ActionLink($"Edit Details", "Edit", new { id = engineer.EngineerId})
        </td>
        <td>
          @Html.ActionLink($"Remove Engineer", "Delete", new { id = engineer.EngineerId})
        </td>
      </tr>
    }
  </table>
}

