@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

@using (Html.BeginForm())
{
  <p>
    @Html.LabelFor(model => model.MachineName)
    @Html.TextBoxFor(model => model.MachineName)
  </p>
  <p>
    @Html.LabelFor(model => model.MachineDescription)
    @Html.TextBoxFor(model => model.MachineDescription)
  </p>
  <p>
    @Html.LabelFor(model => model.MachineInstallDate)
    @Html.TextBoxFor(model => model.MachineInstallDate, new {@type = "date"})
  </p>
  <p>
    @Html.LabelFor(model => model.MachineNextInspectionDate)
    @Html.TextBoxFor(model => model.MachineNextInspectionDate, new {@type = "date"})
  </p>
  <p>
    <input type="submit" value="Save" class="btn" /> 
  </p>
}