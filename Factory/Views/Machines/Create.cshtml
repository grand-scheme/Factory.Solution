@{
  Layout = "_Layout";
}

@* Machines.Create *@
@Html.ActionLink("E", "Index", "Machines")




@using Factory.Models;
@model Factory.Models.Machine

@using (Html.BeginForm())
{
  
  @Html.Label("NAME:")
  @Html.TextBoxFor(model => model.MachineName)
  @Html.Label("INSTALL DATE:")
  @Html.TextBoxFor(model => model.MachineInstallDate, new {@type = "date"})
  @Html.Label("NEXT INSPECTION DATE:")
  @Html.TextBoxFor(model => model.MachineNextInspectionDate, new {@type = "date"})
  <input type="submit" value="Save" class="btn" /> 
}